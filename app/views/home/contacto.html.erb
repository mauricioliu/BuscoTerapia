<div id="block-content" class="block-wrapper">
	<div class="wrapper" id="content">

	<div class="columna-670-left">
		<h2>Cambiar Contraseña</h2>
		
		<div class="busqueda-box-center">
		<div class="form-box">
		
			<div class="titulo-form">
			<h3>Por favor ingrese su su nueva contraseña</h3>
			</div>
			
			<div class="form-block busqueda-palabra-clave">
				<%= form_tag contacto_path do %>
				<div class="label">
					Tu nombre:
				</div>
				<div class="input_field">
					<%= text_field_tag :nombre %>
				</div>
				<div class="label">
					Tu email:
				</div>
				<div class="input_field">
					<%= text_field_tag :email %>
				</div>
				<div class="label">
					Mensaje:
				</div>
				<div class="input_field">
					<%= text_area_tag :mensaje %>
				</div>
				
				<div class="form-block busqueda-button">
					<div class="label">
						<!--&nbsp;-->
					</div>
					<div class="input_field">
						<%= submit_tag "Enviar Mensaje", :class => "boton-morado", :disable_with => "Enviando" %>
					</div>
				</div>
				<% end %>
			</div>
		</div><!--box form-->		
	</div><!--form-box-center-->
</div><!--columna-670-left-->

