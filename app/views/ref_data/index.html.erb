<div id="block-content" class="block-wrapper">
	<div class="wrapper" id="content">

	<div class="columna-670-left">
		<h2>Parametros de Sistema</h2>
					
				
		<table id="table-2">
		  <tr>
			<th>Nombre</th>
			<th>Valor</th>
			<th></th>
			<th></th>
			<th></th>
		  </tr>

		<% @ref_data.each do |ref_datum| %>
		  <tr>
			<td><%= ref_datum.nombre %></td>
			<td><%= ref_datum.valor %></td>
			<td><%= link_to 'Ver', ref_datum %></td>
			<td><%= link_to 'Modificar', edit_ref_datum_path(ref_datum) %></td>
			<td><%= link_to 'Eliminar', ref_datum, confirm: 'Seguro desea eliminar?', method: :delete %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'Crear Nuevo', new_ref_datum_path %>

		<%= will_paginate @ref_data, previous_label: h("<"), next_label: h(">") %>
		
		
				
	</div>
		
	</div><!-- #content -->
</div><!-- block-content -->
	