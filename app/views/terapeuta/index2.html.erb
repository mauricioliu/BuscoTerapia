<h1>Tipos de terapia</h1>

<%= form_for @search do |f| %>
  <p>
    <%= f.label "Tipos de terapia" %><br />
    <%= f.collection_select :especialidad_contains, RefDatum.where(:nombre => "Especialidad"), :valor, :valor, include_blank: true %>
  </p>
  <p>
    <%= f.label "Ciudad de atenciÃ³n:" %><br />
    <%= f.collection_select :region_contains, Region.order(:nombre), :id, :nombre, include_blank: true %>
  </p>
  <p>
  	 <%= f.label "Comuna:" %><br />
  	<%= f.grouped_collection_select :comuna_contains, Region.order(:nombre), :comunas, :nombre, :id, :nombre, include_blank: true %>
