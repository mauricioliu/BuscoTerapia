<div id="block-content" class="block-wrapper">
	<div class="wrapper" id="content">

	<div class="columna-670-left">
		<div class="busqueda-box-center sec-articulos-y-noticias">
			<div class="articulo-volver">
				<%= link_to '<< Volver', terapias_path %>
			</div>
			
	
			<div class="ficha-terapias">
				
				<div class="contenido-ficha">
					<div class="ficha-columna">
							<div class="foto"><%= image_tag @terapia.imagen_url.thumb.url.to_s %></div>
							<p class="nombre-ficha"><%= @terapia.nombre_corto %></p>
							<%= simple_format(@terapia.descripcion) %>								
					</div><!-- ficha-columna -->
					
					
					<% if @terapia.terapeutas and @terapia.terapeutas.size > 0 %>
					<div class="ficha-sidebar">
						<div class="box box-terapeutas">
							<h3>Terap√©utas <%= @terapia.nombre_corto %>:</h3>
							<ul>
								<% @terapia.terapeutas.each do |terapeuta| %>
								<li><span>
									<%= link_to terapeuta.nombre, ficha_path(terapeuta) %><br/>
									<% terapeuta.tipo_terapias.each do |tt| %>
										<%= tt.nombre %> - 
									<% end %><br />
									<%= terapeuta.comuna.titleize %>, <%= terapeuta.region.titleize %>
									</span>
								</li>
								<% end %>
							</ul>
						</div>
					</div><!-- ficha-sidebar -->
					<% end %>
						
					<hr/>	
					<div class="bottom-social">
						<a href="#" class="bt-email">Enviar por correo</a> 
						<a href="#" class="bt-print">Imprimir</a> 
						<div class="social-icons">
							<div class="share-facebook">
								<div class="fb-like" data-href="http://www.google.com" data-send="true" data-layout="button_count" data-width="220" data-show-faces="true" data-action="recommend"></div>
							</div>
							<div class="share-twitter">
								<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.google.com/">Tweet</a>
							</div>
						</div><!-- social-icons -->
					</div><!-- bottom-social -->
				</div><!--contenido ficha-->

			</div><!--ficha terapias-->
			
			
		
			<div class="articulo-volver">
				<%= link_to '<< Volver', terapias_path %>
			</div>
		
		</div><!--form-box-center-->
		
		</div><!--columna-670-left-->
		
		
		<div class="columna-335-right sidebar-noticias">
			<h2>Otras terapias</h2>
			<% @terapias.each do |terapia| %>
				<% if terapia.id != @terapia.id %>
				<div class="ficha-noticia">
					<div class="contenido-ficha">
							<div class="encabezado">
								<h3><%= terapia.nombre_corto %></h3>
							</div>
							<div class="foto"><%= image_tag terapia.imagen_url.horizontal_thumb.url.to_s %></div>
							<p>
								<%= terapia.descripcion[1,170 ]%>								 
								... <%= link_to 'Continuar leyendo', terapia_path(terapia) %>.</a>
							</p>						
					</div><!--contenido ficha-->
					
				</div><!--ficha noticia-->
				<% end %>
			<% end %>
			</div><!--columna-335-right-->
		</div><!-- #content -->
	</div><!-- block-content -->

