<div id="block-content" class="block-wrapper">
<h1>Tipos de terapia</h1>

<%= form_for @search do |f| %>
  <p>
    <%= f.label "Tipos de terapia" %><br />
    <%= f.collection_select :especialidad_contains, RefDatum.where(:nombre => "Especialidad"), :valor, :valor, include_blank: true %>
  </p>
  <p>
    <%= f.label "Ciudad de atenciÃ³n:" %><br />
    <%= f.collection_select :region_contains, Region.order(:id), :id, :nombre, include_blank: true %>
  </p>
  <p>
  	 <%= f.label "Comuna:" %><br />
  	<%= f.grouped_collection_select :comuna_contains, Region.order(:id), :comunas, :nombre, :id, :nombre, include_blank: true %>
  </p>
  <p>
    <%= f.label :nombre_contains %>
    <%= f.text_field :nombre_contains %>
  </p>
  <p class="button"><%= f.submit "Buscar" %></p>
<% end %>

<table>
<% @terapeutas.each do |terapeuta| %>
  <tr>
    <td><%= terapeuta.nombre %></td>
    <td><%= terapeuta.ptelefono %> - <%= terapeuta.telefono %></td>
    <td><%= terapeuta.pmovil %> - <%= terapeuta.email %></td>
    <td><%= link_to 'Ver', terapeuta %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Crear Terapeuta', new_terapeuta_path %>
</div>
