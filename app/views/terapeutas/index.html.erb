									<li><span><strong>Teléfonos de contacto:</strong> +56 9 8675 4323</span></li>
									<li><span><strong>Correo electrónico:</strong> huaqui@huaqui.cl</span></li> 
									<li><span><strong>Sitio web:</strong> <a href="http://www.huaiqui.cl">huaiqui.cl</a></span></li>
								</ul>
								
								<input type="button" value="Contactar al Terapeuta" class="boton-morado" />
							</div><!-- ficha-columna -->
							<div class="ficha-sidebar">
								<div class="box box-descuentos">
								<h3>Descuentos</h3>
								<img src="http://fpoimg.com/151x126" alt="Esteban Soto" width="151" height="126" border="0" />
								</div>
								
								<div class="box box-mapa">
									<h3>Mapa de Ubicación</h3>
									<div class="map-container">
										<%= image_tag "http://maps.google.com/maps/api/staticmap?size=151x182&sensor=true&zoom=16&markers=#{terapeuta.latitude}%2C#{terapeuta.longitude}", :class => "link-mapa-google" %>
									</div>
									
								</div>
								<div class="box box-entrevista">
									<a href="#">Ver entrevista.</a>
								</div>

							</div><!-- ficha-sidebar -->
						</div><!--descirpcion full-->
					</div><!--contenido ficha-->
					
				</div><!--ficha persona-->
				<% end %>
				<%= will_paginate @terapeutas, previous_label: h("<"), next_label: h(">") %>
			<% end %>
		<% end %>
				
				
			
