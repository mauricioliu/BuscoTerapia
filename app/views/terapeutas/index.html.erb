<div id="block-content" class="block-wrapper">
	<div class="wrapper" id="content">

	<div class="columna-670-left">
		<h2>Buscar terapeutas</h2>
		
		<div class="busqueda-box-center">
		<%= render "search_form"%>
		<% if @sepa%>			
			<p class="busqueda-mensaje-resultado">
				Se han encontrado <strong><%=@terapeutas.count%></strong> 
				de <strong><%= @sepa["tipo_terapias_nombre_contains"] %></strong>
				<% if @sepa["region_contains"] != "" %> 
				en <strong><%= Region.find(@sepa["region_contains"]).nombre %></strong> 
				<% end %>
				<% if @sepa["nombre_or_especialidades_valor_contains"] != "" %> 
				relacionados con <strong><%= @sepa["nombre_or_especialidades_valor_contains"] %></strong>
				<% end %>
			</p>
		<% end %>
		<% if @sepa %>
		
